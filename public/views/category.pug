<!DOCTYPE html>
html(lang="en-US")
    head
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width, initial-scale=1, user-scalable=no, maximum-scale=1")
        title JavaScript Handbook
        link(rel="stylesheet" type="text/css" href="../css/bootstrap.min.css")
        link(rel="stylesheet" type="text/css" href="../css/style.css")
        script(type="text/javascript" src="../js/jquery.js")
        script(type="text/javascript" src="../js/ckeditor/ckeditor.js")
    body
        // START SITE
        .site
            // START HEADER
            header
            
            // START WRAPPER
            main.wrapper(role="main")
                section.main-content#notes-module
                    .wrap
                        .notes-wrapper
                            .notes-header
                                button.add-btn.btn.btn-primary#note-add-btn
                                    i.fas.fa-plus-circle
                                    span Add Note
                                button.manage-btn.btn.btn-primary#note-manage-btn 
                                    i.fas.fa-edit
                                    span Manage
                                button.done-btn.btn.btn-success#note-done-btn 
                                    span Done
                            .single-note.main-content
                                h2
                                h5
                                p
                                .single-syntax-container
                                    h3
