<!DOCTYPE html>
html(lang="en-US")
    head
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width, initial-scale=1, user-scalable=no, maximum-scale=1")
        title JavaScript Handbook
        link(rel="stylesheet" type="text/css" href="../css/bootstrap.min.css")
        link(rel="stylesheet" type="text/css" href="../css/style.css")
        script(type="text/javascript" src="../js/jquery.js")
        script(type="text/javascript" src="../js/ckeditor/ckeditor.js")
    body
        // START SITE
        .site
            // START HEADER
            header
            
            // START WRAPPER
            main.wrapper(role="main")
                #cat
                
            // START FOOTER
            footer
    script(defer src="../js/fontawesome-all.min.js")
    script.
        var category = !{JSON.stringify(category)};
        (category || []).forEach(function(cat) {
            var $cat = $('<ul>');
            $cat.text(cat.name);
            (cat.idNotes || []).forEach(function(note) {
                var $note = $('<li>');
                $note.text(note.title);
                $cat.append($note);
            });
            $('#cat').append($cat);
        });